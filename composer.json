{
    "name": "sylius-labs/rabbitmq-simplebus-bundle",
    "type": "symfony-bundle",
    "description": "Integrates RabbitMQ with SimpleBus.",
    "license": "MIT",
    "require": {
        "php": "^7.1",

        "php-amqplib/rabbitmq-bundle": "^1.12",
        "simple-bus/message-bus": "^2.2",
        "simple-bus/symfony-bridge": "^5.1",
        "symfony/monolog-bundle": "^3.1"
    },
    "require-dev": {
        "matthiasnoback/symfony-dependency-injection-test": "^1.1",
        "phpspec/phpspec": "^3.2",
        "phpunit/phpunit": "^5.6",
        "sylius-labs/coding-standard": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "SyliusLabs\\RabbitMqSimpleBusBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\SyliusLabs\\RabbitMqSimpleBusBundle\\": "spec/",
            "Tests\\SyliusLabs\\RabbitMqSimpleBusBundle\\": "tests/"
        }
    }
}
